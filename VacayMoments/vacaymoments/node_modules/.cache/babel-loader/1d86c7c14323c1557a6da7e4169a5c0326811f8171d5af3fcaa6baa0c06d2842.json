e Vue\n      axios.get('/api/me', {\n        headers: {\n          'Authorization': 'Bearer ' + localStorage.getItem('userToken')\n        }\n      }).then(response => {\n        this.usuario = response.data; // Atualizar o estado com os dados do utilizador\n      }).catch(error => {\n        console.error('Erro ao recuperar os dados do usuário', error);\n      });\n    },\n    logout() {\n      localStorage.removeItem('token'); // Remover o token do localStorage\n      this.$router.push('/login'); // Redirecionar para a página de login\n    }\n  },\n  created() {\n    this.fetchUserData(); // Buscar os dados do utilizador quando o componente é criado\n    this.fetchAllPhotos(); // Adicione esta linha para buscar todas as fotos\n  }\n};","map":{"version":3,"names":["axios","defaultAvatar","AppHeader","components","data","usuario","allPhotos","currentPhotoIndex","showReactions","userReaction","methods","reagirAFoto","tipoEmoji","fotoID","post","headers","localStorage","getItem","then","response","catch","error","console","prevPhoto","length","nextPhoto","fetchAllPhotos","get","navigateTo","path","$router","push","fetchUserData","logout","removeItem","created"],"sources":["C:\\Users\\bruno\\OneDrive - UTAD\\Ambiente de Trabalho\\G6_23-24\\VacayMoments\\vacaymoments\\src\\views\\PaginaInicial.vue"],"sourcesContent":["<template>\r\n    <div>\r\n    <app-header></app-header>\r\n</div>\r\n    <div class=\"app-container\">\r\n    <aside class=\"sidebar\">\r\n  <!-- Foto do perfil e nome -->\r\n  <div class=\"profile-section\">\r\n    <img :src=\"usuario?.fotoPerfil || defaultAvatar\" alt=\"\" class=\"profile-picture\">\r\n  <h2>{{ usuario?.nome || 'Utilizador' }}</h2>\r\n  </div>\r\n\r\n  <!-- Filtro -->\r\n  <div class=\"filter-section\">\r\n    <h3>Filtrar por:</h3>\r\n    <div class=\"filter-item\">\r\n      <label for=\"tags\">Tags:</label>\r\n      <input type=\"text\" id=\"tags\" placeholder=\"Insira as tags\">\r\n    </div>\r\n    <div class=\"filter-item\">\r\n    